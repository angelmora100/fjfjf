<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.admin.myapplication.MainActivity">

   //Boton que pasa ala siguiente activity


    <Button
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="127dp"
        tools:layout_editor_absoluteX="148dp"
        android:text="Enviar"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/mensaje"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="98dp" />
//TextView que da instrucción
    <TextView
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ingrese correo "
        tools:layout_editor_absoluteY="7dp"
        tools:layout_editor_absoluteX="145dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
//TextView en el que ingresas correo
    <EditText
        android:id="@+id/nombre"
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:hint="Correo:"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/mensaje"
        android:layout_alignParentStart="true" />
//TextView que da instrucción
    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese contraseña"
        tools:layout_editor_absoluteY="7dp"
        tools:layout_editor_absoluteX="145dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/nombre"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/contraseña"
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:hint="Contraseña"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/texto"
        android:layout_alignParentStart="true" />






</RelativeLayout>
